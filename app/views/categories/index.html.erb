<h1 class="text-center mt-4"> Categories </h1>

<nav>
  <ul class="pagination justify-content-center">
    <%== pagy_nav(@pagy) %>
  </ul>
</nav>

<% if @categories.any? %>
    <div class="container"  style="<%= @categories.count > 3 ? 'height: auto' : 'height: 100%' %>">
        <% @categories.each do |category| %>
            <div class="row justify-content-center ">
            <div class="col-4 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                
                <div class="card-body">
                    <h5 class="card-title"><%= link_to category.name, category_path(category), class: "card-t text-success"%></h5>
                    <p class="card-text"><%= pluralize(category.articles.count, "article") %></p>
                </div>
                <div class="card-footer text-body-secondary">
                    <small>Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>
                </div>
                </div>
            </div>
            </div>
        <% end %>
    </div>
<% else %>
    <div class="container" style="height: 100%">
        <h3 class="text-center">This Admin hasn't created any categories yet</h3>
    </div>
<% end %>

<nav>
  <ul class="pagination justify-content-center">
    <%== pagy_nav(@pagy) %>
  </ul>
</nav>